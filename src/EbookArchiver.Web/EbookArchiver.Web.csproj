<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <UserSecretsId>aspnet-EbookArchiver.Web-F19A2A26-2D75-45E4-8544-888F66DED214</UserSecretsId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="5.0.10" NoWarn="NU1605" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.OpenIdConnect" Version="5.0.10" NoWarn="NU1605" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="5.0.10">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.Identity.Web" Version="1.17.0" />
    <PackageReference Include="Microsoft.Identity.Web.UI" Version="1.17.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\EbookArchiver.Data.MySql\EbookArchiver.Data.MySql.csproj" />
  </ItemGroup>

  <Target Name="CustomAfterBuild" AfterTargets="Build">
    <Exec Command="npm install" />

    <ItemGroup>
      <Bootstrap Include="node_modules\bootstrap\dist\**\*.*" />
      <jQuery Include="node_modules\jquery\dist\**\*.*" />
      <jQueryValidation Include="node_modules\jquery-validation\dist\**\*.*" />
      <jQueryValidationUnobtrusive Include="node_modules\jquery-validation-unobtrusive\dist\**\*.*" />
    </ItemGroup>

    <Copy
      SourceFiles="@(Bootstrap)"
      DestinationFiles="@(Bootstrap->'wwwroot\lib\bootstrap\dist\%(RecursiveDir)%(Filename)%(Extension)')"
    />

    <Copy
      SourceFiles="@(jQuery)"
      DestinationFiles="@(jQuery->'wwwroot\lib\jquery\dist\%(RecursiveDir)%(Filename)%(Extension)')"
    />

    <Copy
      SourceFiles="@(jQueryValidation)"
      DestinationFiles="@(jQueryValidation->'wwwroot\lib\jquery-validation\dist\%(RecursiveDir)%(Filename)%(Extension)')"
    />

    <Copy
      SourceFiles="@(jQueryValidationUnobtrusive)"
      DestinationFiles="@(jQueryValidationUnobtrusive->'wwwroot\lib\jquery-validation-unobtrusive\%(RecursiveDir)%(Filename)%(Extension)')"
    />
  </Target>

</Project>
